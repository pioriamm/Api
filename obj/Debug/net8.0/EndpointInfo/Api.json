  "components": {
    "schemas": {
      "Jornada": {
        "required": [
          "jornadaData",
          "jornadaHora",
          "km",
          "motoristaID",
          "placa"
        ],
        "type": "object",
        "properties": {
          "quilometragemId": {
            "type": "string",
            "format": "uuid"
          },
          "jornadaData": {
            "type": "string",
            "format": "date"
          },
          "jornadaHora": {
            "type": "string",
            "format": "date-time"
          },
          "motoristaID": {
            "type": "string",
            "format": "uuid"
          },
          "motorista": {
            "$ref": "#/components/schemas/Motorista"
          },
          "placa": {
            "maxLength": 10,
            "minLength": 0,
            "type": "string"
          },
          "km": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "Motorista": {
        "required": [
          "displayName",
          "isAdim",
          "login",
          "passWord",
          "telefone"
        ],
        "type": "object",
        "properties": {
          "motoristaID": {
            "type": "string",
            "format": "uuid"
          },
          "displayName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "login": {
            "minLength": 1,
            "pattern": "^[^@\\s]+@[^@\\s]+\\.(com)$",
            "type": "string",
            "format": "email"
          },
          "passWord": {
            "maxLength": 9,
            "minLength": 1,
            "pattern": "^(?=.*[A-Z])(?=.*\\d)(?=.*[\\W_]).{1,8}$",
            "type": "string"
          },
          "telefone": {
            "maxLength": 15,
            "minLength": 0,
            "type": "string"
          },
          "isAdim": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
